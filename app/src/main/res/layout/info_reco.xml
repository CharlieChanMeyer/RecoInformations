<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoReco">

    <!--creating a text view for displaying
        output on below line-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="393dp"
        android:layout_height="144dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:text="走行距離: "
        android:textColor="@color/purple_500"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_stepsTaken"
        android:layout_width="122dp"
        android:layout_height="52dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:text="0 m"
        android:textColor="@color/purple_500"
        android:textSize="37sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/steps"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_informationFound"
        android:layout_width="414dp"
        android:layout_height="419dp"
        android:layout_marginBottom="88dp"
        android:gravity="center_horizontal"
        android:text="レストランは見つかりませんでした。"
        android:textColor="@color/purple_500"
        android:textSize="37sp"
        app:layout_constraintBottom_toBottomOf="@+id/idTVOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/irReturnMenuButton"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/idTVOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_informationFound"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Output will appear here"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/irReturnMenuButton"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Here are the existing layout elements, now wrapped in
         a CoordinatorLayout -->


</androidx.constraintlayout.widget.ConstraintLayout>
